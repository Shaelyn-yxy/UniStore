<!-- This the the navigation bar of the website,
     most of the pages on the website contain this navigation bar at the top,
     users can jump to the page they want to go by simply click the navigation bar -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="https://kit.fontawesome.com/b1fede7911.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Candal&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
    <link href = 'https://fonts.googleapis.com/css?family=Fredericka+the+Great' rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/navBar.css'/>
    <title>Home</title>
</head>
<body>
<header>
    <div class="logo">
        <h1 class = "logo_text"><span>Uni</span>Store</h1>
    </div>
    <i class="fas fa-bars menu"></i>
    <ul class="nav">
        <li><a href="/home">Home</a></li>
        <li><a href="/home/searchPage">Search</a></li>
        <li><a href="/home/aboutUs">About</a></li>
        <li>
            <a href="/users">
                <i class="fa fa-user"></i>
                User
                <i class="fa fa-chevron-down" style="font-size: 0.8em"></i>
            </a>
            <ul>
                <li><a href="/users"><i class="fa fa-columns"></i> Userpage</a></li>
                <li><a href="/logout" class="logout"> <i class="fas fa-sign-out-alt"></i> Log out</a></li>
            </ul>
        </li>
    </ul>
</header>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function(){
        $('.menu').on('click',function(){
            $('.nav').toggleClass('showing');
            $('.nav ul').toggleClass('showing');
        });
    });
</script>

</body>
</html>